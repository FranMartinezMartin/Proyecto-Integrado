<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.services.boss.AssignFragment">

    <Spinner
        android:id="@+id/spDate"
        android:layout_width="315dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vDate"
        android:layout_width="370dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="@+id/spDate"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="@+id/spDate"
        app:layout_constraintTop_toTopOf="@+id/spDate" />

    <ImageView
        android:id="@+id/imageCalendar"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/calendario"
        app:layout_constraintStart_toEndOf="@+id/vDate"
        app:layout_constraintTop_toTopOf="parent" />

    <!--androidx.recyclerview.widget.RecyclerView
